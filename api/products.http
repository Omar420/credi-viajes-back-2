@HOST=http://localhost:4050/api

@TOKEN=YOUR_AUTH_TOKEN
@API_KEY=YOUR_API_KEY

@categoryId=3510ff7d-1318-450a-9f22-a932cd64636f

### Create a new product
# @name createProduct
POST {{HOST}}/products
Content-Type: application/json
Authorization: Bearer {{TOKEN}}

{
    "name": "Gaming Laptop",
    "description": "High-performance laptop for gaming",
    "amount": 2500.00,
    "stock_qty": 15,
    "fk_category_id": "{{categoryId}}"
}

### Get all products
# @name getAllProducts
GET {{HOST}}/products
Authorization: Bearer {{TOKEN}}

### Get product by ID
# @name getProductById
GET {{HOST}}/products/{{createProduct.response.body.id}}
Authorization: Bearer {{TOKEN}}

### Update a product
# @name updateProduct
PUT {{HOST}}/products/{{createProduct.response.body.id}}
Content-Type: application/json
Authorization: Bearer {{TOKEN}}

{
    "name": "Gaming Laptop Pro",
    "description": "Upgraded high-performance laptop for gaming",
    "amount": 2800.50,
    "stock_qty": 10
}

### Delete a product
# @name deleteProduct
DELETE {{HOST}}/products/{{createProduct.response.body.id}}
Authorization: Bearer {{TOKEN}}
