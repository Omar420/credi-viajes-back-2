### Get all bookings
# @name getAllBookings
GET {{HOST}}/bookings/all
Authorization: Bearer {{TOKEN}}

### Get booking by ID
# @name getBookingById
GET {{HOST}}/bookings/{{createBooking.response.body.id}}
Authorization: Bearer {{TOKEN}}

### Get bookings by client ID
# @name getBookingsByClientId
GET {{HOST}}/bookings/client/{{clientId}}
Authorization: Bearer {{TOKEN}}

### Update a booking
# @name updateBooking
PUT {{HOST}}/bookings/{{createBooking.response.body.id}}
Content-Type: application/json
Authorization: Bearer {{TOKEN}}

{
    "name": "Updated booking for trip to the mountains",
    "description": "Updated family vacation",
    "totalAmount": 1500.75,
    "notes": "All passengers are confirmed"
}

### Update booking status
# @name updateBookingStatus
PATCH {{HOST}}/bookings/{{createBooking.response.body.id}}/status
Content-Type: application/json
Authorization: Bearer {{TOKEN}}

{
    "fk_status_id": "another-status-id",
    "paymentSuccessful": true
}

### Cancel a booking
# @name cancelBooking
PUT {{HOST}}/bookings/{{createBooking.response.body.id}}/cancel
Authorization: Bearer {{TOKEN}}

### Delete a booking
# @name deleteBooking
DELETE {{HOST}}/bookings/{{createBooking.response.body.id}}
Authorization: Bearer {{TOKEN}}
